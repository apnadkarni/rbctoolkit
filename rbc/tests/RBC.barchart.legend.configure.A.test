	# ------------------------------------------------------------------------------------
	# Purpose: Ensure that the activebackground configuration works for valid colors.
	# ------------------------------------------------------------------------------------
	test RBC.barchart.legend.configure.A.1.1 {
	    barchart legend: configure - activebackground - valid color
	} -setup {
	    barchart .barchart1     
	    pack .barchart1  
	} -body {
	    .barchart1 legend configure -activebackground black
	    .barchart1 legend cget -activebackground
	} -cleanup {
	    destroy .barchart1
	} -result {black}
	
	# ------------------------------------------------------------------------------------
	# Purpose: Ensure that the activebackground configuration works for invalid colors.
	# ------------------------------------------------------------------------------------
	test RBC.barchart.legend.configure.A.1.2 {
	    barchart legend: configure - activebackground - invalid color
	} -setup {
	    barchart .barchart1     
	    pack .barchart1  
	} -body {
	    if {[catch {.barchart1 legend configure -activebackground invalid}]} {
			return 0
		} else {
			return 1
		}
	} -cleanup {
	    destroy .barchart1
	} -result {0}
	
