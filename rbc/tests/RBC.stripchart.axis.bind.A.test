###Package Definition
package provide stripchart.axis

package require rbc
namespace import rbc::*

package require tcltest
namespace import tcltest::*
namespace eval stripchart.axis {
	# ------------------------------------------------------------------------------------
	# Purpose: Ensure that bindings can be created for an axis element
	# ------------------------------------------------------------------------------------ 
	test RBC.stripchart.axis.bind.A.1.1 {
		Test axis bind creation
	} -setup {
		stripchart .stripchart1
		.stripchart1 axis create Axis1
		pack .stripchart1
	} -body {
		if {[catch {.stripchart1 axis bind Axis1 <Double-1> {puts test}}]} {
        return 1
    }
    return 0
	} -cleanup {
		destroy .stripchart1
	} -result {0}
	
	# ------------------------------------------------------------------------------------
	# Purpose: Ensure that bindings can be queried for a sequence and axis element
	# ------------------------------------------------------------------------------------ 
	test RBC.stripchart.axis.bind.A.1.2 {
    	Test axis bind query
	} -setup {
		stripchart .stripchart1
		.stripchart1 axis create Axis1
		pack .stripchart1
		.stripchart1 axis bind Axis1 <Double-1> {puts test}
	} -body {
		.stripchart1 axis bind Axis1 <Double-1>
	} -cleanup {
		destroy .stripchart1
	} -result {puts test}

	# ------------------------------------------------------------------------------------
	# Purpose: Ensure that bindings can be appended for a sequence and axis element
	# ------------------------------------------------------------------------------------ 
	test RBC.stripchart.axis.bind.A.1.3 {
	    Test axis bind append
	} -setup {
		stripchart .stripchart1
		.stripchart1 axis create Axis1
		pack .stripchart1
	    .stripchart1 axis bind Axis1 <Double-1> {puts test}    
	} -body {
	    .stripchart1 axis bind Axis1 <Double-1> {+puts test2}
	    .stripchart1 axis bind Axis1 <Double-1>    
	} -cleanup {
	    destroy .stripchart1
	} -result "puts test\nputs test2"
	
	# ------------------------------------------------------------------------------------
	# Purpose: Ensure that bindings are overwritten for a sequence and axis element
	# ------------------------------------------------------------------------------------ 
	test RBC.stripchart.axis.bind.A.1.4 {
	    Test axis bind overwrite
	} -setup {
		stripchart .stripchart1
		.stripchart1 axis create Axis1
		pack .stripchart1
	    .stripchart1 axis bind Axis1 <Double-1> {puts test}    
	} -body {
	    .stripchart1 axis bind Axis1 <Double-1> {+puts test2}
	    .stripchart1 axis bind Axis1 <Double-1>    
	} -body {
	    .stripchart1 axis bind Axis1 <Double-1> {puts test2}    
	    .stripchart1 axis bind Axis1 <Double-1>    
	} -cleanup {
	    destroy .stripchart1
	} -result {puts test2}
	
	# ------------------------------------------------------------------------------------
	# Purpose: Ensure that bound sequences can be queried for just a legend element
	# ------------------------------------------------------------------------------------ 
	test RBC.stripchart.axis.bind.A.1.5 {
	    Test axis bind query
	} -setup {
		stripchart .stripchart1
		.stripchart1 axis create Axis1
		pack .stripchart1
		.stripchart1 axis bind Axis1 <Double-1> {puts test}
		.stripchart1 axis bind Axis1 <Key> {puts test2}   
	} -body {
	    .stripchart1 axis bind Axis1
	} -cleanup {
	    destroy .stripchart1
	} -result {<Key> <Double-Button-1>}
	
	cleanupTests
}