	test RBC.winop.image.snap.A.3.1 {
	    winop image snap: single integer screen distance
	} -setup {
		graph .graph1
		pack .graph1
		set img [image create photo]
		update idletasks
	} -body {
	    if {[catch {winop image snap .graph1 $img 10}]} {
