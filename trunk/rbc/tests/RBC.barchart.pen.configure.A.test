	# ------------------------------------------------------------------------------------
	# Purpose: Ensure the pen configure -background command works correctly when given a
	# valid color name.
	# ------------------------------------------------------------------------------------
	test RBC.barchart.pen.configure.A.1.1 {
		barchart pen: configure - background - valid color name
	} -setup {
		barchart .barchart1
		.barchart1 pen create Pen1
		pack .barchart1
	} -body {
		.barchart1 pen configure Pen1 -background red
		.barchart1 pen cget Pen1 -background
	} -cleanup {
		.barchart1 pen delete Pen1
		destroy .barchart1
	} -result {red}
	
	# ------------------------------------------------------------------------------------
	# Purpose: Ensure the pen configure -background command works correctly when given an
	# invalid color name.
	# ------------------------------------------------------------------------------------
	test RBC.barchart.pen.configure.A.1.2 {
		barchart pen: configure - background - invalid color name
	} -setup {
		barchart .barchart1
		.barchart1 pen create Pen1
		pack .barchart1
	} -body {
		if {[catch {.barchart1 pen configure Pen1 -background invalid}]} {
			return 0
		} else {
			return 1
		}
	} -cleanup {
		.barchart1 pen delete Pen1
		destroy .barchart1
	} -result {0}
	
